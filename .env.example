# GoDaddy API Configuration
GODADDY_API_KEY=your_godaddy_api_key_here
GODADDY_API_SECRET=your_godaddy_api_secret_here
GODADDY_ENV=OTE  # OTE for testing, PRODUCTION for live

# Domain Provider Selection
# Choose which provider to use: GODADDY or DNSIMPLE
DOMAIN_PROVIDER=GODADDY

# DNSimple API Configuration (Only needed if DOMAIN_PROVIDER=DNSIMPLE)
DNSIMPLE_API_TOKEN=your_dnsimple_token_here
DNSIMPLE_ACCOUNT_ID=your_account_id_here
DNSIMPLE_SANDBOX=true  # true for testing, false for production

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# GoDaddy API Base URLs (automatically set based on GODADDY_ENV)
# OTE: https://api.ote-godaddy.com
# PRODUCTION: https://api.godaddy.com

# Application Settings
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# AWS S3 Configuration (Optional - for deployment)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1
